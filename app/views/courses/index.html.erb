  <div class="flex flex-col justify-center glass-box mt-6">
    <%= form_with(url: courses_path, method: "GET") do |form| %>
      <div class="flex justify-center gap-4 px-6 py-2">
        <h3 aria-label="City">City</h3>
        <h3 aria-label="State">State</h3>
        <h3 aria-label="Country">Country</h3>
      </div>
      <div class="flex justify-center gap-4 px-6 pb-2">
        <%= form.text_field :fcity, class:"rounded-md font-righteous text-lg text-right" %>
        <%= form.select :fstate, ['NY'] %>
        <%= form.select :fcountry, ['US'] %>
      </div>
      <div class="flex justify-center gap-4 px-6 pb-2">
        <%= form.submit "Search", name: nil, class:"btn-green w-1/4", data: {"turbo-frame": "coursesearch"} %>
      </div>
    <% end %>
  </div>

  <div id="courses" class="flex flex-col mx-2 mt-4 justify-center bg-gradient-to-b from-slate-400 to-slate-600 border-t border-l border-gray-200 inset-shadow rounded-lg">
    <turbo-frame id="coursesearch">
      <%= render @courses %>
    </turbo-frame>
  </div>

